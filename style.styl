@import 'nib'
@import 'rupture'
@import 'typographic'
@import 'lost'

/**
** NORMALIZE
**/
normalize-base()
normalize-html5()

$gutter = 20px

/**
** VARIABLES
**/
$white = #FFFFFF
$dark-primary = #512DA8

/**
**	STYLES
**/
h1
	font-family $candara
	text-align center
	
p
	font-family $body-font
	

header	
	display block
	background $dark-primary
	padding-bottom 15px
	nav					
		center()	
		ul 
			list-style: none														
			li
				display inline-block
				padding 0 10px
				margin-top 10px																			
				a
					text-decoration none												
					font-family $helvetica
					color $white
					&:hover
						text-decoration underline			
					
.content-container
	center()
	background-color $white
	main
		display block
		
			
	

	




